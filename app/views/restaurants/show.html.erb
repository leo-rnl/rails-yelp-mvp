<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>

<%= link_to "Back to the list", restaurants_path, class: "btn btn-primary my-2"%>

<div class="d-flex align-items-center justify-content-between w100">
<h2>Reviews</h2> 
  <%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: "btn btn-secondary my-2"%>
</div>
  <ul >
    <% @reviews.each do |review| %>
    <li>
      <h3><%= review.content%></h3>
      <p><%= review.rating %>/5</p>
      <%= link_to "Remove", review_path(review), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger mx-2"%>
    </li>
    <% end %>
  </ul>

