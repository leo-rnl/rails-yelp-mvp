<div class="d-flex align-items-center justify-content-between w100">
  <h1 class="m-4">Nos restaurants</h1>
  <%= link_to "Add restaurant", new_restaurant_path, class: "btn btn-primary"%>
</div>
  <ul class="rest-list">
    <% @restaurants.each do |restaurant| %>
    <li>
      <h2 class="rest-name"><%= restaurant.name %></h2>
      <p class="adress"><%= restaurant.address %></p>
      <div class="actions d-flex">
        <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary mx-2"%>
        <%= link_to "Edit", edit_restaurant_path(restaurant), class: "btn btn-secondary mx-2"%>
        <%= link_to "Remove", restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger mx-2"%>
      </div>
    </li>
    <% end %>
  </ul>

